# ========================
# Database
# ========================
POSTGRES_DB=reelmatch
POSTGRES_USER=reelmatch
POSTGRES_PASSWORD=reelmatchpass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# DB connection pooling
CONN_MAX_AGE=60  # seconds (adjust per deployment)

# ========================
# Redis (Cache + Celery broker)
# ========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/1   # cache
CELERY_BROKER_URL=redis://localhost:6379/0

# ========================
# Django
# ========================
DJANGO_SECRET_KEY=replace_me_with_a_secure_key
DJANGO_DEBUG=True

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ========================
# API Pagination
# ========================
API_PAGE_SIZE=20

# ========================
# JWT / Authentication
# ========================
JWT_ACCESS_MINUTES=30   # default access token lifetime (minutes)
JWT_REFRESH_DAYS=7      # default refresh token lifetime (days)

# ========================
# Logging
# ========================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ========================
# TMDb
# ========================
TMDB_API_KEY=your_tmdb_api_key_here
